<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <servlet>
        <display-name>ProfOrientation</display-name>
        <servlet-name>Proforientation</servlet-name>
        <servlet-class>firstservlet.MainServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>peopleForProfession</servlet-name>
        <servlet-class>firstservlet.PeopleForProfession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>combo</servlet-name>
        <servlet-class>firstservlet.Combo</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Proforientation</servlet-name>
        <url-pattern>/profession/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>peopleForProfession</servlet-name>
        <url-pattern>/forprofession/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>combo</servlet-name>
        <url-pattern>/combo/*</url-pattern>
    </servlet-mapping>

</web-app>